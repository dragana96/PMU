<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    tools:context="com.example.lenovo.pocketsoccer_pmu.StartActivity">


    <ImageButton
        android:id="@+id/imagePlay"
        android:layout_width="475dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:onClick="playGame"
        app:srcCompat="@drawable/button_play" />

    <ImageButton
        android:id="@+id/imageContinue"
        android:layout_width="475dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:onClick="continueGame"
        app:srcCompat="@drawable/button_continue" />

    <ImageButton
        android:id="@+id/imageSettings"
        android:layout_width="475dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:onClick="settings"
        app:srcCompat="@drawable/button_settings" />

    <ImageButton
        android:id="@+id/imageStats"
        android:layout_width="475dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:onClick="showStats"
        app:srcCompat="@drawable/button_stats" />

</LinearLayout>